<h3 class="mt-3"> Category Details </h3>
<hr class="my-4">

<div class="d-flex justify-content-center">
  <div class=" col-7 d-flex  mt-6 card bg-light justify-content-center">
    <div class="card-body">
      <div class="">
        <div style="display: inline-block;"> <h4>Name:</h4></div>
        <div style="display: inline-block;"><%= @category.name %></div>
      </div>
      <div class="text-center" >
        <% if current_user == @user %>
          <%= link_to "Edit this Category", class: "btn btn-sm btn-primary" %>
          <%= button_to "Delete this Category", class: "btn btn-sm btn-danger" %></div>
        <% end %>
        <%= link_to "View all Categories", category_path,  class: "btn btn-sm btn-success ml-2" %>
        </div>
  </div>
</div>

<%= render 'articles/article', obj: @category.articles %>




