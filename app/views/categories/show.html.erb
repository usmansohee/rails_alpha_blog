<h3 class="mt-3"> Category Details </h3>
<hr class="my-4">

<div class="row">
  <div class="d-flex justify-content-center">
    <div class="col-8 d-flex  mt-6 card bg-light justify-content-center">
      <div class="card-body">
        <div class="jumbotron text-center">
          <div style="display: inline-block;" class="text-center"><strong><%= @category.name.capitalize %></strong></div>
          <hr>
        </div>
        <div class="text-center" >
          <% if logged_in && current_user.admin? %>
            <%= link_to "Edit this Category", edit_category_path(@category) ,class: "btn btn-sm btn-primary" %>
            <%= button_to "Delete this Category", category_path, method: :delete, class: "btn btn-sm btn-danger" %>
          <% end %>
          <%= link_to "View all Categories", categories_path,  class: "btn btn-sm btn-success ml-2" %>
          </div>
    </div>
  </div>
</div>

<div class="row">
  <%= render 'articles/article', obj: @category.articles %>
</div>




