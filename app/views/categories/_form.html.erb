
<!-- TODO - shift error part to the partial and then render from that here -->
<%if @category.errors.any? %>
  <div class="container">
    <div class="card text-white bg-danger mb-3">
      <div class="card-header">Unable to Save User, find errors below</div>
      <div class="card-body">
        <h5 class="card-title"><%= pluralize(@category.errors.count, "Error") %></h5>
        <ul class="card-text">
          <%@category.errors.full_messages.each do |name| %>
            <li><%= name %></li>
          <%end %>
        </ul>
      </div>
    </div>
  </div>
<%end %>

<div class="container">
  <div class="jumbotron">
    <hr class="my-4">
    <%= form_for(@category, :html => {class: "form-horizontal justify-content-center", role: "form" }) do |form| %>
      <div class="form-group mb-3 row">
        <div class="control-label col-sm-1">
          <%= form.label :name %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :name, class: "form-control", placeholder:  "category name", autofocus: true %>
        </div>
      </div>

      <div class="form-group mb-3 row">
        <div class="control-label offset-1 col-sm-1">
          <%= form.submit class: 'btn btn-primary btn-md' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
